1.3 Даны четыре неотрицательных числа a, b, c и d. Сложить две рациональные дроби a/b и c/d, а их результат представить в виде несократимой дроби m/n. Вывести числа m и n. a, b, c, d ≤ 1000.
#include <iostream>
//сумма дробей
using namespace std;
int gcd (int b, int d){
    if (d==0)
        return b;
    else 
        return gcd (d, b%d);
}
int main()
{
    int a, b, c, d;
    cin >> a >> b >> c >> d;
    int m, n;
    n = b*d/gcd (b, d);
    m = a*n/b+c*n/d;
    while (gcd (m, n)!=1) {
        int gcd1 = gcd (m, n);
        m = m/gcd1;
        n = n/gcd1;
    }
    cout << m << " " << n;
    return 0;
}
